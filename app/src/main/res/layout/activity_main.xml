<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="homework.cisc.mlgdev.com.sketchpad.MainActivity"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ivCamera" />

    <homework.cisc.mlgdev.com.sketchpad.DrawingView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawingView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="false"
        android:id="@+id/buttonClear"
        android:layout_alignBottom="@+id/drawingView"
        android:layout_centerHorizontal="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="false"
        android:minHeight="40dip"
        android:minWidth="40dip"
        android:background="@android:drawable/ic_delete"
        android:layout_marginBottom="4dip" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="false"
        android:layout_centerHorizontal="false"
        android:id="@+id/toggleErase"
        android:layout_alignBottom="@+id/drawingView"
        android:layout_toRightOf="@+id/buttonColor"
        android:textOff="@string/eraseOff"
        android:textOn="@string/eraseOn" />

    <Button
        android:text="size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="false"
        android:layout_centerHorizontal="false"
        android:id="@+id/buttonBrushSize"
        android:layout_alignBottom="@+id/drawingView"
        android:layout_toRightOf="@+id/toggleErase" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonColor"
        android:minWidth="40dip"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonClear"
        android:minHeight="40dip"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="false"
        android:layout_centerHorizontal="false"
        android:id="@+id/buttonCamera"
        android:minWidth="40dip"
        android:layout_alignBottom="@+id/drawingView"
        android:minHeight="40dip"
        android:background="@android:drawable/ic_menu_camera"
        android:layout_marginBottom="4dip"
        android:layout_alignParentRight="true" />

</RelativeLayout>
